<?php
$headingTerm = $this->siteSetting('browse_heading_property_term');
$bodyTerm = $this->siteSetting('browse_body_property_term');
$sortings = [
    [
        'label' => $this->translate('Title'),
        'value' => 'title'
    ],
    [
        'label' => $this->translate('Identifier'),
        'value' => 'dcterms:identifier'
    ],
    [
        'label' => $this->translate('Created'),
        'value' => 'created'
    ],
];
?>
<div class="browse-controls">
    <?php echo $this->pagination(); ?>
    <label class="o-icon-uri permalink-label" aria-label="<?php echo $this->translate('Permalink for current faceted list.'); ?>" title="<?php echo $this->translate('Permalink for current faceted list.'); ?>">
    <input type="text" class="permalink" value="<?php echo $this->escapeHtml($this->url('site/resource', ['controller' => 'item', 'action' => 'browse'], ['query' => $query, 'force_canonical' => true], true)); ?>">
    </label>
    <?php echo $this->sortSelector($sortings); ?>

</div>
<ul class="resource-list">
    <?php foreach ($items as $item): ?>
    <?php
    $heading = $headingTerm ? $item->value($headingTerm, ['default' => $translate('[Untitled]')]) : $item->displayTitle();
    $body = $bodyTerm ? $item->value($bodyTerm) : $item->displayDescription();
    ?>
    <li class="item resource">
        <?php echo $item->linkPretty('square', $heading); ?>
        <?php if ($body): ?>
        <div class="description"><?php echo $this->escapeHtml($body); ?></div>
        <?php endif; ?>
    </li>
    <?php endforeach; ?>
</ul>
<div class="browse-controls">
    <?php echo $this->pagination(); ?>
</div>
